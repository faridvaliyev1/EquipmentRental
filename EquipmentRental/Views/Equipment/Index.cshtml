@using EquipmentRental.Models
@using EquipmentRental.Methods 
@model IEnumerable<Equipment>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipment in Model)
        {
        <tr>
            <th scope="row">@equipment.Id</th>
            <td>@equipment.Name</td>
            <td>@Helper.EquipmentTypes[@equipment.Type_id]</td>
            <td><a class="btn btn-success">Order</a></td>
        </tr>
        }
    </tbody>
</table>
 